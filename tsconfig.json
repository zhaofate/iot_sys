{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    // "moduleResolution": "bundler", // 修改为 node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // 修改为 react-jsx
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/lib/mqttManager.js"
, "src/lib/commonData.js"  ],
  "exclude": [
    "node_modules"
  ]
}
